FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code (will be overridden by volume mount)
COPY . .

# Expose port for Vite
EXPOSE 5173

# Enable hot-reload with proper host binding
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]