{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "migration:push": "drizzle-kit push --config=drizzle.config.ts",
   
    "migration:backup": "npx ts-node drizzle/backup/cdc-backup.ts",
   
    "cdc:verify": "docker exec ventum-postgres-dev psql -U app_user -d app_local -c \"SELECT table_name FROM information_schema.tables WHERE table_name LIKE '_cdc_%' ORDER BY table_name;\"",
    "migration:push-safe": "npm run cdc:setup && drizzle-kit push",
    "cdc:backup": "npx ts-node drizzle/backup/cdc-backup.ts",
    "cdc:restore": "npx ts-node drizzle/backup/cdc-restore.ts",
    "cdc:setup": "npx ts-node drizzle/setup-cdc-system.ts",
    "cdc:setup:with-db": "npx ts-node -e \"import { setupCDCSystem } from './drizzle/setup-cdc-system'; import { DatabaseService } from './src/database/database.service'; setupCDCSystem(new DatabaseService());\"",
    "seed": "npx ts-node drizzle/seed.ts",
    "audit": "node -r ts-node/register ./shared/scripts/audit-setup.ts --service=backend",
    "audit:setup": "npx ts-node ./shared/scripts/audit-setup.ts --service=backend",
    "audit:generate": "npx ts-node ./shared/scripts/audit-setup.ts --service=backend",
    "audit:discover": "npx ts-node ./shared/scripts/audit-setup.ts --service=backend",
    "migration:seed": "npm run seed",
    "migration:audit": "npm run audit",
    "migration:full": "npm run migration:push && npm run seed && npm run audit",
    "migration:post": "npm run seed && npm run audit",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@opensearch-project/opensearch": "^2.4.0",
    "@types/nodemailer": "^6.4.17",
    "amqplib": "^0.10.0",
    "axios": "^1.12.2",
    "chrome-finder": "^1.0.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.42.0",
    "express-session": "^1.18.1",
    "mathjs": "^14.6.0",
    "mime-types": "^3.0.1",
    "multer": "^2.0.0",
    "nest-winston": "^1.9.4",
    "nodemailer": "^7.0.5",
    "p-queue": "^6.6.2",
